{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [{
      "name": "@nestjs/swagger",
      "options": {
        "dtoFileNameSuffix": [".types.ts", ".dto.ts", ".schema.ts"],
        "controllerFileNameSuffix": [".controller.ts"],
        "introspectComments": true
      }
    }]
  }
}
